# Google Gemini API
GOOGLE_API_KEY=""

# Chroma Database
CHROMA_HOST="localhost"
CHROMA_PORT="8000"
CHROMA_DATA_DIR="./docker/data"
CHROMA_COLLECTION_NAME="documents"
CHROMA_SSL="false"
CHROMA_TENANT=""
CHROMA_AUTH_TOKEN=""
CHROMA_DEFAULT_METADATA="{}"
CHROMA_SERVER_VERSION="2"

# Chat Configuration
CHAT_MODEL="gemini-2.5-flash"
EMBEDDING_MODEL="text-embedding-004"
CHAT_MAX_TOKENS="2048"
CHAT_TEMPERATURE="0.7"
CHAT_MAX_CONTEXT_DOCS="5"
CHAT_RESPONSE_FORMAT="text"
CHAT_ALLOWED_METADATA_KEYS="scope,category"
CHAT_DEFAULT_SYSTEM_PROMPT_PATH=""
CHAT_ENABLE_STREAMING="false"
GEMINI_REQUEST_TIMEOUT="60"
GEMINI_MAX_RETRIES="3"
GEMINI_RETRY_BACKOFF_SECONDS="2"
